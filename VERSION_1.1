    // Fun√ß√£o de acessibilidade melhorada (remove emojis)
    const sintetizador = window.speechSynthesis;
    let lendo = false;

    function lerPagina() {
      const botao = document.getElementById("botaoLeitura");

      if (lendo) {
        sintetizador.cancel();
        lendo = false;
        botao.innerText = "üîä LER TUDO";
      } else {
